               filled="true"/>
    <rectangle color="black" x="0.4 * width" y="0.4 * height"
                             width="0.35 * width" height="0.35 * height"/>
-->
  </draw_ops>

  
<draw_ops name="close_icon_unfocused">
    <line color="gtk:light[NORMAL]" x1="0.625 * width" y1="0.375 * height"
                                      x2="0.625 * width" y2="0.625 * height"/>
    <line color="gtk:light[NORMAL]" x1="0.375 * width" y1="0.625 * height"
                                      x2="0.625 * width" y2="0.625 * height"/>
    <line color="gtk:dark[NORMAL]" x1="0.375 * width" y1="0.375 * height"
                                     x2="0.625 * width" y2="0.375 * height"/>
    <line color="gtk:dark[NORMAL]" x1="0.375 * width" y1="0.375 * height"
                                     x2="0.375 * width" y2="0.625 * height"/>
  </draw_ops>
  
<draw_ops name="menu_icon_unfocused">
    <icon alpha="1.0" 
  	 x="2" y="height/2 - width/2 + 2"
  	 width="width-5" height="height-5"/>
  </draw_ops>
  
<draw_ops name="minimize_icon_unfocused">
    <line color="gtk:light[NORMAL]" x1="0.75 * width" y1="0.25 * height"
                                      x2="0.75 * width" y2="0.75 * height"/>
    <line color="gtk:light[NORMAL]" x1="0.25 * width" y1="0.75 * height"
                                      x2="0.75 * width" y2="0.75 * height"/>
    <line color="gtk:dark[NORMAL]" x1="0.25 * width" y1="0.25 * height"
                                     x2="0.75 * width" y2="0.25 * height"/>
    <line color="gtk:dark[NORMAL]" x1="0.25 * width" y1="0.25 * height"
