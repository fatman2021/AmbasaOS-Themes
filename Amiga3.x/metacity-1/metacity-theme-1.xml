<?xml version="1.0"?>
<metacity_theme>
  <info>
    <name>Amiga Relief</name>
    <author>Marcus Lundblad</author>
    <copyright>Marcus Lundblad, 2007</copyright>
    <date>2007-01-24</date>
    <description>Amiga with 3D-style buttons.</description>
    <!-- This theme is based on XAmiga Theme -->
</info>


  <constant name="ButtonHPad" value="0"/>

  <frame_geometry name="normal" rounded_top_left="false" rounded_top_right="false" rounded_bottom_left="false" rounded_bottom_right="false">
    <distance name="left_width" value="5"/>
    <distance name="right_width" value="5"/>
    <distance name="bottom_height" value="5"/>
    <distance name="left_titlebar_edge" value="0"/>
    <distance name="right_titlebar_edge" value="0"/>
    <aspect_ratio name="button" value="1"/>
    <distance name="title_vertical_pad" value="5"/>
    <border name="title_border" left="0" right="0" top="0" bottom="0"/>
    <border name="button_border" left="0" right="0" top="0" bottom="0"/>
  </frame_geometry>
	
	<!-- strip borders off the normal geometry -->
  <frame_geometry name="normal_maximized" parent="normal" rounded_top_left="false" rounded_top_right="false" rounded_bottom_left="false" rounded_bottom_right="false">
    <distance name="left_width" value="2"/>
    <distance name="right_width" value="2"/>
    <distance name="bottom_height" value="2"/>
    <distance name="left_titlebar_edge" value="0"/>
    <distance name="right_titlebar_edge" value="0"/>
  </frame_geometry>

  <frame_geometry name="normal_small_borders" parent="normal">
    <distance name="left_width" value="1"/>
    <distance name="right_width" value="1"/>
    <distance name="bottom_height" value="1"/>
    <distance name="left_titlebar_edge" value="0"/>
    <distance name="right_titlebar_edge" value="0"/>
  </frame_geometry>

  <frame_geometry name="border" has_title="false">
    <distance name="left_width" value="5"/>
    <distance name="right_width" value="5"/>
    <distance name="bottom_height" value="5"/>
    <distance name="left_titlebar_edge" value="0"/>
    <distance name="right_titlebar_edge" value="0"/>
    <distance name="button_width" value="1"/>
    <distance name="button_height" value="1"/>
    <distance name="title_vertical_pad" value="5"/>
    <border name="title_border" left="0" right="0" top="0" bottom="0"/>
    <border name="button_border" left="0" right="0" top="0" bottom="0"/>
  </frame_geometry>


  <draw_ops name="title_bg">
    <rectangle x="0" y="0" width="width" height="title_height+5" 
              filled="true" color="gtk:bg[SELECTED]"/>
  </draw_ops>

  <draw_ops name="title_border">
    <line x1="0" y1="0" x2="width-1" y2="0" color="gtk:light[SELECTED]"/>
    <line x1="0" y1="1" x2="width-1" y2="1" color="gtk:light[SELECTED]"/>
    <line x1="width-1" y1="0" x2="width-1" y2="title_height+4"
          color="gtk:dark[SELECTED]"/>
    <line x1="width-2" y1="0" x2="width-2" y2="title_height+4"
          color="gtk:dark[SELECTED]"/>
    <line x1="width-1" y1="title_height+4" x2="0" y2="title_height+4"
          color="gtk:dark[SELECTED]"/>
    <line x1="width-1" y1="title_height+3" x2="0" y2="title_height+3"
          color="gtk:dark[SELECTED]"/>
    <line x1="0" y1="title_height+4" x2="0" y2="0" 
          color="gtk:light[SELECTED]"/>
    <line x1="1" y1="title_height+4" x2="1" y2="0" 
          color="gtk:light[SELECTED]"/>
  </draw_ops>

  <draw_ops name="title_bg_unfocused">
    <rectangle x="0" y="0" width="width" height="title_height+5" 
              filled="true" color="gtk:bg[NORMAL]"/>
  </draw_ops>
  <draw_ops name="title_border_unfocused">
    <line x1="0" y1="0" x2="width-1" y2="0" color="gtk:light[NORMAL]"/>
    <line x1="0" y1="1" x2="width-1" y2="1" color="gtk:light[NORMAL]"/>
    <line x1="width-1" y1="0" x2="width-1" y2="title_height+4"
          color="gtk:dark[NORMAL]"/>
    <line x1="width-2" y1="0" x2="width-2" y2="title_height+4"
          color="gtk:dark[NORMAL]"/>
    <line x1="width-1" y1="title_height+4" x2="0" y2="title_height+4"
          color="gtk:dark[NORMAL]"/>
    <line x1="width-1" y1="title_height+3" x2="0" y2="title_height+3"
          color="gtk:dark[NORMAL]"/>
    <line x1="0" y1="title_height+4" x2="0" y2="0" 
          color="gtk:light[NORMAL]"/>
    <line x1="1" y1="title_height+4" x2="1" y2="0" 
          color="gtk:light[NORMAL]"/>
  </draw_ops>


  <draw_ops name="bevel_unfocused">
    <rectangle filled="true" color="gtk:bg[NORMAL]" x="0" y="title_height+5"
                                      width="5" 
                                      height="height-title_height-6"/>
    <rectangle filled="true" color="gtk:bg[NORMAL]" x="0" y="height-4"
                                      width="width" 
                                      height="5"/>
    <rectangle filled="true" color="gtk:bg[NORMAL]" x="width-4" y="title_height+5"
                                      width="5" 
                                      height="height-title_height-6"/>    
    <line color="gtk:light[NORMAL]" x1="0" y1="title_height+5"
                                    x2="0" y2="height-1"/>
    <line color="gtk:light[NORMAL]" x1="1" y1="title_height+5"
                                    x2="1" y2="height-1"/>
    <line color="gtk:dark[NORMAL]" x1="1" y1="height-1"
                                   x2="width-1" y2="height-1"/>
    <line color="gtk:dark[NORMAL]" x1="1" y1="height-2"
                                   x2="width-1" y2="height-2"/>

    <line color="gtk:dark[NORMAL]" x1="width-1" y1="title_height+5"
                                   x2="width-1" y2="height-1"/>
    <line color="gtk:dark[NORMAL]" x1="width-2" y1="title_height+5"
                                   x2="width-2" y2="height-1"/>

    <line color="gtk:dark[NORMAL]" x1="4" y1="title_height+5"
                                   x2="4" y2="height-5"/>
    <line color="gtk:dark[NORMAL]" x1="3" y1="title_height+5"
                                   x2="3" y2="height-5"/>

    <line color="gtk:light[NORMAL]" x1="5" y1="height-5"
                                   x2="width-5" y2="height-5"/>
    <line color="gtk:light[NORMAL]" x1="5" y1="height-4"
                                   x2="width-5" y2="height-4"/>

    <line color="gtk:light[NORMAL]" x1="width-5" y1="title_height+5"
                                    x2="width-5" y2="height-5"/>
    <line color="gtk:light[NORMAL]" x1="width-4" y1="title_height+5"
                                    x2="width-4" y2="height-5"/>
  </draw_ops>

  <draw_ops name="bevel">
    <rectangle filled="true" color="gtk:bg[SELECTED]" x="0" y="title_height+5"
                                      width="5" 
                                      height="height-title_height-6"/>
    <rectangle filled="true" color="gtk:bg[SELECTED]" x="0" y="height-4"
                                      width="width" 
                                      height="5"/>
    <rectangle filled="true" color="gtk:bg[SELECTED]" x="width-4" y="title_height+5"
                                      width="5" 
                                      height="height-title_height-6"/>    
    <line color="gtk:light[SELECTED]" x1="0" y1="title_height+5"
                                    x2="0" y2="height-1"/>
    <line color="gtk:light[SELECTED]" x1="1" y1="title_height+5"
                                    x2="1" y2="height-1"/>
    <line color="gtk:dark[SELECTED]" x1="1" y1="height-1"
                                   x2="width-1" y2="height-1"/>
    <line color="gtk:dark[SELECTED]" x1="1" y1="height-2"
                                   x2="width-1" y2="height-2"/>

    <line color="gtk:dark[SELECTED]" x1="width-1" y1="title_height+5"
                                   x2="width-1" y2="height-1"/>
    <line color="gtk:dark[SELECTED]" x1="width-2" y1="title_height+5"
                                   x2="width-2" y2="height-1"/>

    <line color="gtk:dark[SELECTED]" x1="4" y1="title_height+5"
                                   x2="4" y2="height-5"/>
    <line color="gtk:dark[SELECTED]" x1="3" y1="title_height+5"
                                   x2="3" y2="height-5"/>

    <line color="gtk:light[SELECTED]" x1="5" y1="height-5"
                                   x2="width-5" y2="height-5"/>
    <line color="gtk:light[SELECTED]" x1="5" y1="height-4"
                                   x2="width-5" y2="height-4"/>

    <line color="gtk:light[SELECTED]" x1="width-5" y1="title_height+5"
                                    x2="width-5" y2="height-5"/>
    <line color="gtk:light[SELECTED]" x1="width-4" y1="title_height+5"
                                    x2="width-4" y2="height-5"/>
  </draw_ops>

  <draw_ops name="round_bevel_unfocused">
    <include name="title_bg_unfocused"/>
    <include name="bevel_unfocused"/>
  </draw_ops>

  <draw_ops name="round_bevel_shaded">
    <include name="title_bg"/>
  </draw_ops>

  <draw_ops name="round_bevel">
    <include name="title_bg"/>
    <include name="bevel"/>
  </draw_ops>

  <draw_ops name="round_bevel_shaded_unfocused">
    <include name="title_bg_unfocused"/>
  </draw_ops>

  <draw_ops name="round_bevel_border_unfocused">
    <rectangle filled="true" color="gtk:bg[NORMAL]" x="0" y="5"
                                      width="5" 
                                      height="height-6"/>
    <rectangle filled="true" color="gtk:bg[NORMAL]" x="0" y="height-4"
                                      width="width" 
                                      height="5"/>
    <rectangle filled="true" color="gtk:bg[NORMAL]" x="width-4" y="5"
                                      width="5" 
                                      height="height-title_height-6"/>    
    <!-- top rectangle -->
    <rectangle filled="true" color="gtk:bg[NORMAL]" x="0" y="0" width="width" height="5"/>
    <line color="gtk:light[NORMAL]" x1="0" y1="0"
                                    x2="0" y2="height-1"/>
    <line color="gtk:light[NORMAL]" x1="1" y1="0"
                                    x2="1" y2="height-1"/>
    <line color="gtk:dark[NORMAL]" x1="1" y1="height-1"
                                   x2="width-1" y2="height-1"/>
    <line color="gtk:dark[NORMAL]" x1="1" y1="height-2"
                                   x2="width-1" y2="height-2"/>

    <line color="gtk:dark[NORMAL]" x1="width-1" y1="0"
                                   x2="width-1" y2="height-1"/>
    <line color="gtk:dark[NORMAL]" x1="width-2" y1="0"
                                   x2="width-2" y2="height-1"/>

    <line color="gtk:dark[NORMAL]" x1="4" y1="4"
                                   x2="4" y2="height-5"/>
    <line color="gtk:dark[NORMAL]" x1="3" y1="4"
                                   x2="3" y2="height-5"/>

    <line color="gtk:light[NORMAL]" x1="5" y1="height-5"
                                   x2="width-5" y2="height-5"/>
    <line color="gtk:light[NORMAL]" x1="5" y1="height-4"
                                   x2="width-5" y2="height-4"/>

    <line color="gtk:light[NORMAL]" x1="width-5" y1="4"
                                    x2="width-5" y2="height-5"/>
    <line color="gtk:light[NORMAL]" x1="width-4" y1="4"
                                    x2="width-4" y2="height-5"/>

    <!-- top shades -->
    <line color="gtk:light[NORMAL]" x1="0" y1="0" x2="width-1" y2="0"/>
    <line color="gtk:light[NORMAL]" x1="0" y1="1" x2="width-1" y2="1"/>
    <line color="gtk:dark[NORMAL]" x1="4" y1="4" x2="width-5" y2="4"/>
    <line color="gtk:dark[NORMAL]" x1="4" y1="3" x2="width-5" y2="3"/>
  </draw_ops>
  <draw_ops name="round_bevel_border">
    <rectangle filled="true" color="gtk:bg[SELECTED]" x="0" y="5"
                                      width="5" 
                                      height="height-6"/>
    <rectangle filled="true" color="gtk:bg[SELECTED]" x="0" y="height-4"
                                      width="width" 
                                      height="5"/>
    <rectangle filled="true" color="gtk:bg[SELECTED]" x="width-4" y="5"
                                      width="5" 
                                      height="height-6"/>    
    <rectangle filled="true" color="gtk:bg[SELECTED]" x="0" y="0" width="width" height="5"/>
    <!-- top rectangle -->
    <line color="gtk:light[SELECTED]" x1="0" y1="0"
                                    x2="0" y2="height-1"/>
    <line color="gtk:light[SELECTED]" x1="1" y1="0"
                                    x2="1" y2="height-1"/>
    <line color="gtk:dark[SELECTED]" x1="1" y1="height-1"
                                   x2="width-1" y2="height-1"/>
    <line color="gtk:dark[SELECTED]" x1="1" y1="height-2"
                                   x2="width-1" y2="height-2"/>

    <line color="gtk:dark[SELECTED]" x1="width-1" y1="0"
                                   x2="width-1" y2="height-1"/>
    <line color="gtk:dark[SELECTED]" x1="width-2" y1="0"
                                   x2="width-2" y2="height-1"/>

    <line color="gtk:dark[SELECTED]" x1="4" y1="4"
                                   x2="4" y2="height-5"/>
    <line color="gtk:dark[SELECTED]" x1="3" y1="4"
                                   x2="3" y2="height-5"/>

    <line color="gtk:light[SELECTED]" x1="5" y1="height-5"
                                   x2="width-5" y2="height-5"/>
    <line color="gtk:light[SELECTED]" x1="5" y1="height-4"
                                   x2="width-5" y2="height-4"/>

    <line color="gtk:light[SELECTED]" x1="width-5" y1="4"
                                    x2="width-5" y2="height-5"/>
    <line color="gtk:light[SELECTED]" x1="width-4" y1="4"
                                    x2="width-4" y2="height-5"/>

    <!-- top shades -->
    <line color="gtk:light[SELECTED]" x1="0" y1="0" x2="width-1" y2="0"/>
    <line color="gtk:light[SELECTED]" x1="0" y1="1" x2="width-1" y2="1"/>
    <line color="gtk:dark[SELECTED]" x1="4" y1="4" x2="width-5" y2="4"/>
    <line color="gtk:dark[SELECTED]" x1="4" y1="3" x2="width-5" y2="3"/>
  </draw_ops>


<!-- ::: TITLES ::: -->

  <draw_ops name="title_text">
    
    <title color="gtk:fg[SELECTED]" x="10" y="(((height - title_height) / 2) `max` 0)"/>
  </draw_ops>

  <draw_ops name="title_text_unfocused">
    <title color="gtk:fg[NORMAL]" x="10" y="(((height - title_height) / 2) `max` 0) "/>
  </draw_ops>

  <draw_ops name="title">
    <include name="title_bg"/>
    <include name="title_text"/>
    <include name="title_border"/>
  </draw_ops>

  <draw_ops name="title_unfocused">
    <include name="title_bg_unfocused"/>
    <include name="title_text_unfocused"/>
    <include name="title_border_unfocused"/>
  </draw_ops>

<!-- ::: BUTTONS ::: -->

  

  

  
<draw_ops name="close_icon_focused">
    <line color="gtk:light[SELECTED]" x1="0.625 * width" y1="0.375 * height"
                                      x2="0.625 * width" y2="0.625 * height"/>
    <line color="gtk:light[SELECTED]" x1="0.375 * width" y1="0.625 * height"
                                      x2="0.625 * width" y2="0.625 * height"/>
    <line color="gtk:dark[SELECTED]" x1="0.375 * width" y1="0.375 * height"
                                     x2="0.625 * width" y2="0.375 * height"/>
    <line color="gtk:dark[SELECTED]" x1="0.375 * width" y1="0.375 * height"
                                     x2="0.375 * width" y2="0.625 * height"/>
  </draw_ops>
  
<draw_ops name="menu_icon_focused">
    <icon alpha="1.0" 
  	 x="2" y="height/2 - width/2 + 2"
  	 width="width-5" height="height-5"/>
  </draw_ops>
  
<draw_ops name="minimize_icon_focused">
