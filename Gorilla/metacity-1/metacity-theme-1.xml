  </draw_ops>

  <draw_ops name="title_text_unfocused">
    <title color="blend/gtk:fg[NORMAL]/gtk:bg[NORMAL]/0.6" x="(3 `max` (width-title_width)) / 2" y="((height - title_height) / 2) `max` 0"/>
  </draw_ops>

  <draw_ops name="title">
